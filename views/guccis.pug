extends layout

block content
    - let creatPage = `dispatch(\"/guccis/create")` 
    button.btn( class="btn-primary ml-1", onclick= creatPage) Create
    h1= title
    - let items = results; 
    table(class="table table-stripped table-bordered")
        thead(style="background-color:black;color:white") 
            tr
                td Item ID
                td Item name 
                td Item Type 
                td Item Price 
                td Update
        tbody 
            each item in items 
                - let destination = `dispatch(\"/guccis/update?id=${item._id}\")`
                - let detailPage = `dispatch(\"/guccis/detail?id=${item._id}\")`
                - let deletePage = `dispatch(\"/guccis/delete?id=${item._id}\")` 

                tr
                    td #{item._id}
                    td #{item.Itemname}
                    td #{item.Quantity}
                    td #{item.price}
                    td 
                     button.btn( class="btn-primary ml-1", onclick= destination) Update
                     button.btn( class="btn-primary ml-1", onclick= destination) Detail
                     button.btn( class="btn-primary ml-1", onclick= destination) Delete
                     
            script. 
                function dispatch(path){ 
                    window.location.href=path 
                } 